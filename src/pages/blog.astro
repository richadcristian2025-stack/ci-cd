<script>
  // Back to Top Functionality
  const backToTopBtn = document.getElementById('backToTop') as HTMLButtonElement | null;
  const mobileNavToggle = document.getElementById('mobileNavToggle') as HTMLButtonElement | null;
  const mainNav = document.querySelector('nav') as HTMLElement | null;
  
  function toggleBackToTop() {
    if (!backToTopBtn) return;
    
    if (window.scrollY > 300) {
      backToTopBtn.classList.add('visible');
    } else {
      backToTopBtn.classList.remove('visible');
    }
  }
  
  function scrollToTop() {
    window.scrollTo({
      top: 0,
      behavior: 'smooth' as ScrollBehavior
    });
  }
  
  // Mobile Navigation Toggle
  function toggleMobileMenu() {
    if (!mobileNavToggle || !mainNav) return;
    
    const isExpanded = mobileNavToggle.getAttribute('aria-expanded') === 'true';
    mobileNavToggle.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileNavToggle.classList.toggle('active');
    document.body.classList.toggle('nav-open');
    
    if (mainNav) {
      mainNav.style.display = isExpanded ? 'none' : 'block';
    }
  }
  
  // Newsletter form submission
  document.addEventListener('astro:page-load', () => {
    // Back to Top Event Listeners
    if (backToTopBtn) {
      window.addEventListener('scroll', toggleBackToTop);
      backToTopBtn.addEventListener('click', scrollToTop);
      // Initial check
      toggleBackToTop();
    }
    
    // Mobile Navigation Event Listener
    if (mobileNavToggle) {
      mobileNavToggle.addEventListener('click', toggleMobileMenu);
    }
    const form = document.getElementById('newsletterForm') as HTMLFormElement | null;
    if (form) {
      form.addEventListener('submit', async (e: SubmitEvent) => {
        e.preventDefault();
        if (!(e.target instanceof HTMLFormElement)) return;
        
        const formData = new FormData(e.target);
        const email = formData.get('email') as string | null;
        const messageEl = document.getElementById('formMessage');
        
        if (!messageEl) return;
        
        // Simple email validation
        if (!email || !email.includes('@')) {
          messageEl.textContent = 'Please enter a valid email address';
          messageEl.className = 'form-message error';
          return;
        }
        
        try {
          // Here you would typically send the data to your server
          // For now, we'll just show a success message
          messageEl.textContent = 'Thank you for subscribing!';
          messageEl.className = 'form-message success';
          e.target.reset();
          
          // Clear success message after 5 seconds
          setTimeout(() => {
            if (messageEl) {
              messageEl.textContent = '';
              messageEl.className = 'form-message';
            }
          }, 5000);
          
        } catch (error) {
          if (messageEl) {
            messageEl.textContent = 'An error occurred. Please try again later.';
            messageEl.className = 'form-message error';
          }
          console.error('Newsletter subscription error:', error);
        }
      });
    }
  });
</script>
